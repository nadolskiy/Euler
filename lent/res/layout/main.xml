<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="5dp" android:weightSum="1">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingBottom="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="0.5" android:gravity="center_vertical">
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/progress" android:indeterminate="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="0.5" android:gravity="center_vertical|right">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Осталось 39 дней"
                    android:id="@+id/tv_day_left" android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingBottom="5dp" android:paddingTop="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ДЕНЬ №1"
                android:id="@+id/tv_day_number" android:layout_gravity="center_horizontal" android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:paddingTop="5dp" android:weightSum="1"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Что сегодня можно кушать?"
                android:id="@+id/tv_need_to_eat" android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Сегодня необходимо воздержаться от приёма пищи. Пить только воду."
                android:id="@+id/tv_eat" android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Как сегодня себя чувствуешь?"
                android:id="@+id/tv_how_you_feel" android:paddingBottom="5dp" android:paddingTop="20dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/et_feling" android:layout_weight="0.17"
                android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Что сегодня ел, пил?"
                android:id="@+id/tv_what_you_eat" android:paddingBottom="5dp" android:paddingTop="20dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/et_eat" android:layout_weight="0.17"
                android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ВЕС:"
                android:id="@+id/textView7" android:layout_gravity="center_horizontal" android:paddingBottom="5dp"
                android:paddingTop="20dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Утром:"
                    android:id="@+id/textView" android:paddingRight="5dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/et_weight" android:layout_weight="1"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="кг."
                    android:id="@+id/textView19"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ОБЪЁМ:"
                android:id="@+id/textView8" android:layout_gravity="center_horizontal" android:paddingTop="20dp"
                android:paddingBottom="5dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Талия:"
                    android:id="@+id/textView3" android:paddingRight="10dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/et_waist" android:layout_weight="1"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="см."
                    android:id="@+id/textView4" android:paddingRight="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Бёдра:"
                    android:id="@+id/textView5" android:paddingRight="10dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/et_haungth" android:layout_weight="1"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="см."
                    android:id="@+id/textView6"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="РЕЗУЛЬТАТЫ:"
                android:id="@+id/textView9" android:layout_gravity="center_horizontal" android:paddingTop="20dp"
                android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- Сегодня сбросил:"
                android:id="@+id/textView16" android:paddingBottom="5dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:paddingBottom="5dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="0.3" android:gravity="center_vertical|left">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вес: 0 кг."
                        android:id="@+id/tv_weight_gone_today"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="0.3" android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Талия: 0 см."
                        android:id="@+id/tv_waist_today"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_weight="0.3" android:gravity="center_vertical|right">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Бёдра: 0 см."
                        android:id="@+id/tv_haunch_today"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- За всё время сбросил:"
                android:id="@+id/textView11" android:paddingBottom="5dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:paddingBottom="20dp" android:id="@+id/linearLayout">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:layout_weight="0.3"
                          android:gravity="center_vertical|left">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Вес: 0 кг." android:id="@+id/tv_weight_gone_all"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:layout_weight="0.3" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Талия: 0 см." android:id="@+id/tv_waist_all"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:layout_weight="0.3"
                          android:gravity="center_vertical|right">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Бёдра: 0 см." android:id="@+id/tv_haunch_all"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="СОХРАНИТЬ"
                android:id="@+id/btn_saveToDB" android:layout_gravity="center_horizontal" android:paddingBottom="5dp"
                />
    </LinearLayout>
</LinearLayout>

